<?xml version="1.0" encoding="utf-8"?>


                                                              
                                                  
                            

    
                 
                        
                                                                          
           

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_game_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:context=".InGame">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:tag="binding_1"                   
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                style="@style/header_one_style" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:tag="binding_2"                  
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                style="@style/normal_text_style" />

            <TextView
                style="@style/normal_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginBottom="@dimen/margin"
                android:text="Please Choose the Answer Below"
                android:textColor="#000000"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginBottom="@dimen/margin">

                <RadioButton
                    android:id="@+id/action_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:tag="binding_3"                        
                    style="@style/normal_text_style"/>

                <RadioButton
                    android:id="@+id/action_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:tag="binding_4"                        
                    style="@style/normal_text_style"/>

                <RadioButton
                    android:id="@+id/action_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:tag="binding_5"                        
                    style="@style/normal_text_style"/>

            </RadioGroup>

            <Button
                android:id="@+id/action_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                android:text="@string/action_button_text"
                android:textAlignment="center" />

        </LinearLayout>

    </ScrollView>

         